{
  "name": "blog-itjustbong",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:blog": "turbo run dev --filter=@apps/blog",
    "dev:resume": "turbo run dev --filter=@apps/resume",
    "dev:llm": "turbo run dev --filter=@apps/llm",
    "dev:hub": "turbo run dev --filter=@apps/hub",
    "build:blog": "turbo run build --filter=@apps/blog",
    "build:resume": "turbo run build --filter=@apps/resume",
    "build:llm": "turbo run build --filter=@apps/llm",
    "build:hub": "turbo run build --filter=@apps/hub",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.8.0",
    "turbo": "^2"
  },
  "packageManager": "pnpm@9.0.0"
}
